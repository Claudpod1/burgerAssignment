<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4"> Burger Assignment</h1>
    <p class="lead"> Need a burger to add to your night! Come down to the burger shop and pick out or make your
      hamburger.</p>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class= "photoOnBackground">
        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTZl4tOjGcqE4kCZ4MVYBz2Qw8f6NvrVPmGEuWTCUAXEIFyOUkXCw" height="300px" width= "400px">
      </div>
    </div>


    <div class="col-lg-12">



      <h2>Add a burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>


        <button type="submit">Add burger</button>
      </form>
    </div>

    <br>
    <br>

    <div class="col-lg-6">

      <h2>Burger Added </h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burgers-block devoured=false}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-lg-6">

      <h2>Burgers devoured!</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>
          {{burger_name}}

        </li>

        {{/if}}
        {{/each}}


      </ul>
    </div>
  </div>

</div>